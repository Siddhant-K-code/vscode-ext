{
  "name": "openfga-vscode-client",
  "description": "VS Code language support for OpenFGA authorization models",
  "author": "OpenFGA",
  "keywords": [
    "openfga",
    "authorization",
    "fga",
    "fine-grained-authorization",
    "rebac",
    "zanzibar"
  ],
  "license": "Apache-2.0",
  "version": "0.0.1",
  "publisher": "openfga",
  "repository": {
    "type": "git",
    "url": "https://github.com:openfga/openfga-vscode"
  },
  "contributes": {
    "languages": [
      {
        "id": "openfga",
        "aliases": [
          "OpenFGA",
          "openfga"
        ],
        "extensions": [
          ".fga",
          ".openfga"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "openfga",
        "scopeName": "source.openfga",
        "path": "./syntaxes/openfga.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "OpenFGA Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/openfga-dark.json"
      }
    ],
    "commands": [
      {
        "command": "openfga.commands.transformToJson",
        "title": "OpenFGA: Transform DSL to JSON"
      }
    ]
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "dependencies": {
    "@openfga/syntax-transformer": "^0.1.3",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.2.3",
    "monaco-editor": "0.37.1"
  }
}
