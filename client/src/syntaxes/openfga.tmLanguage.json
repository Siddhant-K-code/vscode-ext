{
	"name": "openfga",
	"scopeName": "source.openfga",
	"fileTypes": [".fga", ".openfga"],
	"patterns": [
	  {
		"include": "#comments"
	  },
	  {
		"include": "#keywords"
	  },
	  {
		"include": "#identifiers"
	  },
	  {
		"include": "#symbols"
	  }
	],
	"repository": {
	  "comments": {
		"patterns": [
		  {
			"name": "comment.openfga",
			"match": "^(\\s*)#.*"
		  }
		]
	  },
	  "keywords": {
		"patterns": [
		  {
			"name": "as.keyword.openfga",
			"match": "\\bas\\b"
		  },
		  {
			"name": "from.keyword.openfga",
			"match": "\\bfrom\\b"
		  },
		  {
			"name": "model.keyword.openfga",
			"match": "\\bmodel\\b"
		  },
		  {
			"name": "relations.keyword.openfga",
			"match": "\\brelations\\b"
		  },
		  {
			"name": "schema.keyword.openfga",
			"match": "\\bschema\\b"
		  },
		  {
			"name": "self.keyword.openfga",
			"match": "\\bself\\b"
		  },
		  {
			"name": "intersection.operator.openfga",
			"match": "\\band\\b"
		  },
		  {
			"name": "union.operator.openfga",
			"match": "\\bor\\b"
		  },
		  {
			"name": "exclusion.operator.openfga",
			"match": "\\bbut\\snot\\b"
		  }
		]
	  },
	  "identifiers": {
		"patterns": [
		  {
			"match": "^(type)\\s+([a-zA-Z0-9-_]+)",
			"captures": {
				"1": { "name": "type.keyword.openfga" },
				"2": { "name": "name.type.value.openfga" }
			 }
		  }
		]
	  },
	  "symbols": {
		"patterns": [
			{
			  "match": "^\\s{4}(define)\\s+([a-zA-Z0-9-_]+)\\s+(as)\\s+",
			  "captures": {
					"1": { "name": "define.keyword.openfga" },
					"2": { "name": "name.relation.value.openfga" },
					"3": { "name": "as.keyword.openfga" }
			   }
			},
			{
			  "match": "^\\s{4}(define)\\s+([a-zA-Z0-9-_]+)(:)\\s*(\\[[a-zA-Z0-9-_:#,*]+])?",
			  "captures": {
					"1": { "name": "define.keyword.openfga" },
					"2": { "name": "name.relation.value.openfga" },
					"3": { "name": "colon.define.delimiter.openfga" },
					"4": { "name": "type-restrictions.value.openfga" }
			   }
			}
		]
	  },
	  "word": {
		"patterns": [
			{
				"match": "$?[a-zA-Z0-9-_]",
				"name": "word.openfga"
			}
		]
	  }
	}
  }
  